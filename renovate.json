{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [ "before 5am on Monday" ],
  "packageRules": [
    {
      "packagePatterns": [ "*" ],
      "managers": [ "maven" ],
      "updateTypes": [ "minor", "patch", "major" ],
      "automerge": true
    }
  ],
  "ignorePaths": [
    "**/.gitlab-ci.yml"
  ],
  "dependencyDashboard": true
}
