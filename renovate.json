{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [ "before 5am on Monday" ],
  "maven": {
    "enabled": true,
    "registryUrls": [ "https://repo.maven.apache.org/maven2", "https://repo1.maven.org/maven2" ]
  },
  "packageRules": [
    {
      "packagePatterns": [ "*" ],
      "managers": [ "maven" ],
      "updateTypes": [ "minor", "patch", "major" ],
      "automerge": true
    }
  ],
  "ignorePaths": [
    "**/.gitlab-ci.yml"
  ],
  "dependencyDashboard": true
}
